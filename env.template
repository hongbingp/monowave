# AdChain MVP Environment Variables Template
# Copy this file to .env and fill in your values

# ================================
# Database Configuration
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monowave
DB_NAME_TEST=monowave_test
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/monowave

# ================================
# Redis Configuration  
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ================================
# Blockchain Configuration
# ================================
PRIVATE_KEY=0x...your_private_key_here
WEB3_PROVIDER_URL=http://127.0.0.1:8546

# Network RPC URLs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_MAINNET_RPC_URL=https://mainnet.base.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR-PROJECT-ID
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR-PROJECT-ID

# ================================
# MVP Contract Addresses
# ================================
# These will be set after deployment
ACCESS_CONTROL_ADDRESS=
PARTICIPANT_REGISTRY_ADDRESS=
TOKEN_REGISTRY_ADDRESS=
ESCROW_ADDRESS=
BATCH_LEDGER_ADDRESS=
DISTRIBUTOR_ADDRESS=
PLATFORM_TIMELOCK_ADDRESS=
MOCK_USDC_ADDRESS=

# ================================
# Etherscan API Keys for Verification
# ================================
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISTIC_ETHERSCAN_API_KEY=your_optimistic_etherscan_api_key

# ================================
# Application Configuration
# ================================
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here

# MVP Service Configuration
SYNC_INTERVAL_MINUTES=5
BATCH_SIZE=100
BATCH_TIMEOUT_MS=30000
REVENUE_BATCH_SIZE=50

