{
  "name": "monowave",
  "version": "1.0.0",
  "description": "Monowave - AI content authorization and advertising settlement platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "npm run compile",
    "test": "npm run test:unit && npm run test:contracts",
    "test:unit": "jest tests/unit/simple.test.js tests/unit/utils.test.js",
    "test:unit:all": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:watch": "jest --watch tests/unit/simple.test.js tests/unit/utils.test.js",
    "test:coverage": "jest --coverage tests/unit/simple.test.js tests/unit/utils.test.js",
    "test:contracts": "hardhat test --config contracts/hardhat.config.js",
    "compile": "hardhat compile --config contracts/hardhat.config.js",
    "deploy": "hardhat run contracts/scripts/deployMvp.js --config contracts/hardhat.config.js",
    "deploy:legacy": "hardhat run contracts/scripts/deployModular.legacy.js --config contracts/hardhat.config.js",
    "deploy:localhost": "hardhat run contracts/scripts/deployMvp.js --network localhost --config contracts/hardhat.config.js",
    "deploy:hardhat": "hardhat run contracts/scripts/deployMvp.js --network hardhat --config contracts/hardhat.config.js",
    "deploy:base-sepolia": "hardhat run contracts/scripts/deployMvp.js --network baseSepolia --config contracts/hardhat.config.js",
    "deploy:base": "hardhat run contracts/scripts/deployMvp.js --network base --config contracts/hardhat.config.js",
    "test:contracts:mvp": "hardhat test --config contracts/hardhat.config.js contracts/test_mvp/*.test.js",
    "migrate:mvp": "node scripts/migrate-to-mvp.js",
    "setup:mvp": "npm run migrate:mvp && node scripts/setup-database.js",
    "validate:deployment": "node scripts/validate-deployment-config.js",
    "post-deploy": "hardhat run contracts/scripts/postDeployOps.js --config contracts/hardhat.config.js",
    "post-deploy:base-sepolia": "hardhat run contracts/scripts/postDeployOps.js --network baseSepolia --config contracts/hardhat.config.js",
    "verify:all": "hardhat run contracts/scripts/verifyAll.js --config contracts/hardhat.config.js",
    "verify:base-sepolia": "hardhat run contracts/scripts/verifyAll.js --network baseSepolia --config contracts/hardhat.config.js",
    "seed:participants": "hardhat run contracts/scripts/seedParticipants.js --config contracts/hardhat.config.js",
    "node": "hardhat node --config contracts/hardhat.config.js",
    "verify": "hardhat verify --config contracts/hardhat.config.js",
    "lint": "eslint src/ --fix",
    "lint:contracts": "npx prettier --write contracts/contracts/**/*.sol",
    "typecheck": "tsc --noEmit",
    "clean": "hardhat clean --config contracts/hardhat.config.js && rm -rf node_modules package-lock.json contracts/node_modules contracts/package-lock.json",
    "install:clean": "npm run clean && npm install",
    "test:unit:current": "jest tests/unit/ --ignore-pattern=\"*.legacy.test.js\"",
    "test:unit:legacy": "jest tests/unit/*.legacy.test.js",
    "test:mvp": "npm run test:contracts:mvp && npm run test:unit:current",
    "test:all": "npm run test:mvp"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pm2": "^5.3.0",
    "redis": "^4.6.13",
    "uuid": "^9.0.1",
    "web3": "^4.8.0",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "chai": "^4.4.1",
    "eslint": "^9.2.0",
    "hardhat": "^2.22.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.1",
    "supertest": "^7.0.0",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "adchain",
    "ai",
    "crawler",
    "blockchain",
    "advertising",
    "modular",
    "smart-contracts"
  ],
  "author": "AdChain Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adchain/adchain-platform"
  }
}