{
  "name": "adchain",
  "version": "1.0.0",
  "description": "AdChain - AI crawling authorization and advertising settlement platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "npm run compile",
    "test": "npm run test:unit && npm run test:contracts",
    "test:unit": "jest tests/unit/simple.test.js tests/unit/utils.test.js",
    "test:unit:all": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:watch": "jest --watch tests/unit/simple.test.js tests/unit/utils.test.js",
    "test:coverage": "jest --coverage tests/unit/simple.test.js tests/unit/utils.test.js",
    "test:contracts": "hardhat test --config contracts/hardhat.config.js",
    "compile": "hardhat compile --config contracts/hardhat.config.js",
    "deploy": "hardhat run contracts/scripts/deployModular.js --config contracts/hardhat.config.js",
    "deploy:localhost": "hardhat run contracts/scripts/deployModular.js --network localhost --config contracts/hardhat.config.js",
    "deploy:hardhat": "hardhat run contracts/scripts/deployModular.js --network hardhat --config contracts/hardhat.config.js",
    "deploy:testnet": "hardhat run contracts/scripts/deployModular.js --network plasmaTestnet --config contracts/hardhat.config.js",
    "node": "hardhat node --config contracts/hardhat.config.js",
    "verify": "hardhat verify --config contracts/hardhat.config.js",
    "lint": "eslint src/ --fix",
    "lint:contracts": "npx prettier --write contracts/contracts/**/*.sol",
    "typecheck": "tsc --noEmit",
    "clean": "hardhat clean --config contracts/hardhat.config.js && rm -rf node_modules package-lock.json contracts/node_modules contracts/package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.2.0",
    "redis": "^4.6.13",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "dotenv": "^16.4.5",
    "uuid": "^9.0.1",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.8",
    "web3": "^4.8.0",
    "joi": "^17.12.3",
    "pm2": "^5.3.0",
    "@openzeppelin/contracts": "^5.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "@eslint/js": "^9.2.0",
    "eslint": "^9.2.0",
    "typescript": "^5.4.5",
    "@types/node": "^20.12.12",
    "@types/jest": "^29.5.12",
    "jest-environment-node": "^29.7.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.3",
    "chai": "^4.4.1",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.1"
  },
  "keywords": ["adchain", "ai", "crawler", "blockchain", "advertising", "modular", "smart-contracts"],
  "author": "AdChain Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adchain/adchain-platform"
  }
}